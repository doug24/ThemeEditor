<Application x:Class="ThemeEditor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ThemeEditor"
             StartupUri="MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes\LightBrushes.xaml" />
                <ResourceDictionary Source="ResourceDictionaries\ThemedWindow.xaml" />
                <ResourceDictionary Source="ResourceDictionaries\TextBox.xaml" />
                <ResourceDictionary Source="ResourceDictionaries\Button.xaml" />
                <ResourceDictionary Source="ResourceDictionaries\CheckBox.xaml" />
                <ResourceDictionary Source="ResourceDictionaries\ComboBox.xaml" />
                <ResourceDictionary Source="ResourceDictionaries\RadioButton.xaml" />
                <ResourceDictionary Source="ResourceDictionaries\GroupBox.xaml" />
                <ResourceDictionary Source="ResourceDictionaries\Styles.xaml" />
                <ResourceDictionary Source="ResourceDictionaries\CustomTemplates.xaml" />

                <ResourceDictionary Source="ResourceDictionaries\ColorSlider.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
